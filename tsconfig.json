{
    "compilerOptions": {
        "strict": true,
        "target": "ESNext",
        "lib": [ "ESNext", "dom" ],
        "module": "None",
        "moduleResolution": "Classic",
        "isolatedModules": true,
        "paths": {
            "*": ["./node_modules/*"],
        },
        "checkJs": true,
        "noEmit": false,
        "skipLibCheck": true
    },
    "include": [
        "exporter.ts",
        "types.ts",
        "globals.d.ts"
    ],
    "exclude": [
        "node_modules/**/*"
    ]
}